<div class="spacer"></div>

<% if current_user %>
	<% if admin? %>
		<ul class="post_approved_ul">
			<li class="active">Approved</li>
			<li>|</li>
			<li class="inactive">Pending</li>
		</ul>
	<% end %>
<% end %>

<!-- <h2 class="guest_post_h2"><a class="guest_post_link" href="/contact">Submit a guest post here</a></h2> -->
<!-- <div class="spacer_small"></div> -->

<div class="spacer"></div>

<div class="blog_main_container">
	<div class="left_column_posts">
		<% @posts.each do |post| %>
			<%= render partial: 'posts/post_preview', locals: {post: post} %>
		<% end %>
	</div>

	<div class="right_column_posts">
		<h1 class="recent_posts_header">Featured Posts</h1>
		<% @featured.each do |post| %>
			<%= render partial: 'posts/featured_posts', locals: {post: post} %>
		<% end %>

		<div class="spacer"></div>

		<h1 class="recent_posts_header hide_about_mobile">About Me</h1>
		<%= link_to(image_tag('about-square.jpeg', id: 'about_square', class: "hide_about_mobile"), about_path) %>
		<p class="about_p hide_about_mobile">
			Numquam quae sit incidunt magni non quisquam. Maiores sunt omnis. Velit cupiditate culpa repudiandae rem illum repellat quod. Quia et sit velit alias mollitia eveniet eos.
		</p>
		<a class="about_a hide_about_mobile" href="/about">Learn more about me</a>

	</div>
</div>




