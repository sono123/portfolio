<div class="form_div">
	<%= form_for @post, :html => {:multipart => true, class: "contact_form"} do |f| %>

		<p>
		<%= f.label :title %>
		<%= f.text_field(:title, class: "form_field new_post", value: "Title", onfocus: "if (this.value=='Title') this.value='';", onblur: "if (this.value=='') this.value='Title';") %>
		</p>

		<div class="line"></div>
		 
		<p>
		<%= f.label :category_id, "Category"%>
		<%= f.select 'category_id', options_for_select(@categories.collect{ |c| [c.name, c.id] }), class: "form_field" %><br>
		</p>

		<div class="line"></div>

		<p>
		<%= f.label :author %>
		<%= f.text_field :author %>
		</p>
		 
		<p>
		<%= f.label :body %>
		<%= f.text_area :body %>
		</p>

		<p>
		<%= f.label :pictures %>
		<%= file_field_tag "images[]", type: :file, multiple: true %>
		</p>

	 
		<p><%= f.submit "Submit" %> </p>
	<% end %>
</div>